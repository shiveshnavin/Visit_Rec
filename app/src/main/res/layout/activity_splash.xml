<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.htec.visitrec.AddVisit">
<ScrollView
    android:layout_above="@+id/send"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp" />



        <com.daniribalbert.customfontlib.views.CustomFontTextView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="Owner Name Here"
            app:font="Avenir-Medium"
            android:id="@+id/details" />

        <com.daniribalbert.customfontlib.views.CustomFontEditText
            android:maxLines="1"
            android:layout_margin="10dp"
            android:id="@+id/field0"
            android:hint="Name"
            app:font="Avenir-Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/houses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Spinner
                android:background="@drawable/rounded_black_hollow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wing" />



            <Spinner
                android:background="@drawable/rounded_black_hollow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/houseno" />





        </LinearLayout>


        <com.daniribalbert.customfontlib.views.CustomFontEditText
            android:maxLines="1"
            android:layout_margin="10dp"
            android:id="@+id/field1"
            android:hint="Phone No."
            android:inputType="number"
            app:font="Avenir-Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <CheckBox
            android:maxLines="1"
            android:layout_margin="10dp"
            android:id="@+id/field2"
            android:hint="Work Visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <!-- purpose plumber/cook-->
        <Spinner
            android:background="@drawable/rounded_black_hollow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/field3" />





        <com.daniribalbert.customfontlib.views.CustomFontEditText
            android:maxLines="5"
            android:layout_margin="10dp"
            android:id="@+id/field4"
            android:hint="Purpose "
            app:font="Avenir-Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <com.daniribalbert.customfontlib.views.CustomFontEditText
            android:maxLines="2"
            android:layout_margin="10dp"
            android:id="@+id/field5"
            android:hint="Visiting from"
            app:font="Avenir-Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>


</ScrollView>

    <com.daniribalbert.customfontlib.views.CustomFontTextView
        app:font="Avenir-Medium"
        android:text="SEND"
        android:textColor="@color/white"
        android:background="@color/green_300"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
